{
  "manifest_version": 2,

  "name": "hello-world-extension",
  "description": "Hello world of native messaging",
  "homepage_url": "https://TODO.COM",
  "default_locale": "en",
  "version": "0.0.1",
  "icons": {
    "128": "./icons/terminal-128.png"
  },
  "author": "ilyaigpetrov@gmail.com",

  "permissions": [
    "nativeMessaging"
    , "storage"
  ],

  "background": {
    "persistent": true,
    "page": "./bg.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+C"
      }
    }
  },

  "browser_action": {},

  "browser_specific_settings": {
    "gecko": {
      "id": "hello-world-extension@todo.com",
      "strict_min_version": "91.1.0"
    }
  }
}
